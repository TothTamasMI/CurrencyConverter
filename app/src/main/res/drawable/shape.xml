<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">

            <stroke
                android:width="2dp"
                android:color="@color/black" />

            <corners android:radius="360dp"/>

            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" >
            </padding>
            <solid
                android:color="#E2F4F8"></solid>

        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">

            <stroke
                android:width="2dp"
                android:color="@color/black" />

            <corners android:radius="360dp"/>

            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" >
            </padding>
            <solid
                android:color="#78cce2"></solid>

        </shape>
    </item>
</selector>